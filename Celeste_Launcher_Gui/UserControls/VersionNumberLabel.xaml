<UserControl x:Class="Celeste_Launcher_Gui.UserControls.VersionNumberLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Celeste_Launcher_Gui.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" x:Name="LayoutRoot">
        <Label Content="{Binding LabelContents}" Foreground="White" VerticalAlignment="Center" FontFamily="{StaticResource Ashley-Crawford-CG}" FontSize="15"/>
        <Border Height="32" Width="127">
            <Border.Background>
                <ImageBrush ImageSource="pack://application:,,,/Celeste Launcher;component/Resources/VersionNumberLabelBackground.png"/>
            </Border.Background>
            <TextBlock Text="{Binding VersionNumber}" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource Ashley-Crawford-CG}" FontSize="15"/>
        </Border>
    </StackPanel>
</UserControl>
